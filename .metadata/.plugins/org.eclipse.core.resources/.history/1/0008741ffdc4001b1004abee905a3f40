package tw.group5.controller;

import java.io.IOException;
import java.io.InputStream;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.apache.commons.io.IOUtils;
import org.springframework.http.HttpStatus;
import org.springframework.http.MediaType;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ResponseBody;

@Controller
public class ResponseController {
	
	@GetMapping(path = "/response/imageByteArray.controller")
	public void responseImageAsByteArray(HttpServletRequest request, HttpServletResponse response) throws IOException {
		InputStream is1 = request.getServletContext().getResourceAsStream("/WEB-INF/pages/resources/images/wukong.png");
		IOUtils.copy(is1, response.getOutputStream()); //用copy帶入inputstream和outputstream
	}
	
	@GetMapping(path = "/response/imageToByteArray.controller", produces = "text/plain;charset=UTF-8")
	public @ResponseBody byte[] responseImageByteArray2(HttpServletRequest request, HttpServletResponse response) throws IOException {
		InputStream is1 = request.getServletContext().getResourceAsStream("/WEB-INF/pages/resources/images/wukong.png");
		response.setContentType(MediaType.IMAGE_PNG_VALUE);
		return IOUtils.toByteArray(is1);
	}
	
	@GetMapping(path = "/response/message.controller")
	@ResponseBody
	public String processResponseAction() {
		return "This Message is from Server你好";
	}
	
	@GetMapping(path = "/response/message.charset.controller", produces = "text/plain;charset=UTF-8")
	@ResponseBody
	public String processResponseCharsetAction() {
		return "This Message is from Joshy: \"你好\"";
	}
	
	@GetMapping(path = "/response/entityStatus.controller")
	public ResponseEntity<String> processResponseEntity(){
		return new ResponseEntity<String>("Customized Message 403", HttpStatus.FORBIDDEN);
	}
	
	
	
	
}
