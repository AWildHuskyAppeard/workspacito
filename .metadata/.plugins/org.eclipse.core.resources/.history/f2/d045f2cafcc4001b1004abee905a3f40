package tw.joshsun.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import tw.joshsun.model.House;

@Controller
public class JsonCreatorController {
	@GetMapping(path = "/jsoncreator.controller")
	@ResponseBody
	public House processJsonAction() {
		House hBean = new House();
		hBean.setHouseid(10001);
		hBean.setHousename("Beautiiiiful House");
		return hBean; //這樣回傳就是json格式，會在畫面上show Json資料
	}
}
