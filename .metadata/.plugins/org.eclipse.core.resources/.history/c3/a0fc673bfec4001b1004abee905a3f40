package tw.group5.controller;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ExceptionHandler;

@ControllerAdvice //監控controller發生問題時，他會來掌控
public class MyExceptionHandler {
	@ExceptionHandler(Exception.class) //專門處理exception的????
	public Object processException(Exception e) {
		String errMsg = "msg:Exception Occurred";
		return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body(errMsg);
	}
}
